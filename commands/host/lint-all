#!/bin/bash

## Description: Run all linting tools on files
## Usage: lint-all [--files|-f "file1 file2"] [--all|-a]
## Example: "ddev lint-all" (checks changed files)
##          "ddev lint-all -f 'file1.php file2.js'" (checks specific files)
##          "ddev lint-all --all" (checks all custom files)
## ExecRaw: true

echo "Running all linting tools..."

echo -e "\nğŸ” Running PHP CodeSniffer..."
ddev phpcs "$@" || exit $?

echo -e "\nğŸ” Running ESLint..."
ddev eslint "$@" || exit $?

echo -e "\nğŸ” Running Stylelint..."
ddev stylelint "$@" || exit $?

echo -e "\nğŸ” Running Twig CS Fixer..."
ddev twigcs "$@" || exit $?

echo -e "\nğŸ” Running CSpell..."
ddev cspell "$@" || exit $?

echo -e "\nğŸ” Running PHPStan..."
ddev phpstan "$@" || exit $?