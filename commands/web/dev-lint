#!/bin/bash

## #ddev-generated
## Description: Run all linting tools on changed custom modules and themes files
# Fail on:
# -e : any command fails
# -u : undefined variables
# -o pipefail : failure in a pipeline propagates
set -euo pipefail

echo "üîç Running linters..."

if [ "${IS_CI:-false}" = "TRUE" ]; then
  echo "üìã Running in CI environment - using predefined changed files"
else
  echo "üñ• Running locally - detecting changed files"
  # Get changed files in local environment
  PHP_CHANGED_FILES=$(git diff --name-only --diff-filter=dr | grep -E 'docroot/(modules|themes)/custom/.*\.(php|module)$' | tr '\n' ' ' || true)
  JS_CHANGED_FILES=$(git diff --name-only --diff-filter=dr | grep -E 'docroot/(modules|themes)/custom/.*\.(js)$' | tr '\n' ' ' || true)
  STYLE_CHANGED_FILES=$(git diff --name-only --diff-filter=dr | grep -E 'docroot/(modules|themes)/custom/.*\.(css)$' | tr '\n' ' ' || true)
  TWIG_CHANGED_FILES=$(git diff --name-only --diff-filter=dr | grep -E 'docroot/(modules|themes)/custom/.*\.(twig)$' | tr '\n' ' ' || true)
  TEXT_CHANGED_FILES=$(git diff --name-only --diff-filter=dr | grep -E 'docroot/(modules)/custom/.*\.(php|module|js|twig|yml|yaml|json|css|scss|sass|md|txt)$' | tr '\n' ' ' || true)
fi

# --- PHP Coding Standards ---
if [ -n "${PHP_CHANGED_FILES:-}" ]; then
  echo "‚û° PHP Linting..."
  echo "$PHP_CHANGED_FILES" | tr ' ' '\n'
  .ddev/commands/web/dev-phpcs $PHP_CHANGED_FILES
else
  echo "‚úÖ Skipping PHP lint"
fi

# --- JavaScript ---
if [ -n "${JS_CHANGED_FILES:-}" ]; then
  echo "‚û° JS Linting..."
  echo "$JS_CHANGED_FILES" | tr ' ' '\n'
  .ddev/commands/web/dev-eslint $JS_CHANGED_FILES
else
  echo "‚úÖ Skipping JS lint"
fi

# --- CSS ---
if [ -n "${STYLE_CHANGED_FILES:-}" ]; then
  echo "‚û° CSS Linting..."
  echo "$STYLE_CHANGED_FILES" | tr ' ' '\n'
  .ddev/commands/web/dev-stylelint $STYLE_CHANGED_FILES
else
  echo "‚úÖ Skipping CSS lint"
fi

# --- Twig ---
if [ -n "${TWIG_CHANGED_FILES:-}" ]; then
  echo "‚û° Twig Linting..."
  echo "$TWIG_CHANGED_FILES" | tr ' ' '\n'
  .ddev/commands/web/dev-twigcs $TWIG_CHANGED_FILES
else
  echo "‚úÖ Skipping Twig lint"
fi

# --- Spell Checking ---
if [ -n "${TEXT_CHANGED_FILES:-}" ]; then
  echo "‚û° Spell Checking..."
  echo "$TEXT_CHANGED_FILES" | tr ' ' '\n'
  .ddev/commands/web/dev-cspell $TEXT_CHANGED_FILES
else
  echo "‚úÖ Skipping spell check"
fi

echo "üéâ All linting done successfully."
